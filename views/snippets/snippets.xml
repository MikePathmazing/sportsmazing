<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="custom_snippets" inherit_id="website.snippets" name="Custom Snippets">
        <xpath expr="//div[@id='snippet_structure']" position="before">
            <div id="snippet_structure" class="o_panel">
                <div class="o_panel_header">My Snippet</div>
                <div class="o_panel_body">
                    <t t-snippet="sportsmazing_theme.dynamic_product" t-thumbnail="/theme_yourhome/static/src/img/snippets/explore-cities.svg">
                        <keywords>dynamic, product</keywords>
                    </t>
                </div>
            </div>
        </xpath>
    </template>

    <record id="sportsmazing_theme.dynamic_product_show" model="ir.asset">
        <field name="name">Dynamic Product</field>
        <field name="bundle">web.assets_frontend</field>
        <field name="path">sportsmazing_theme/static/src/js/dynamic_product.js</field>
    </record>
</odoo>